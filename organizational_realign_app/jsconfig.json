{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"],
      "@/types/*": ["types/*"],
      "@/components/*": ["components/*"],
      "@/app/*": ["app/*"],
      "@/hooks/*": ["hooks/*"],
      "@/data/*": ["data/*"]
    },
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts", 
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "build",
    "dist"
  ]
}
