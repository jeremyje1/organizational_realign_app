{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": [
      "jest",
      "@types/jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "isolatedModules": false
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**/*.ts",
    "**/__tests__/**/*.tsx",
    "jest.setup.ts"
  ]
}
