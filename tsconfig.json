{
  "compilerOptions": {
    /* ==== language basics ==== */
    "target": "es2021",
    "lib": [
      "dom",
      "dom.iterable",
      "es2021"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    /* ==== path aliases & react ==== */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@app/*": [
        "./app/*"
      ]
    },
    "types": [
      "node",
      "react",
      "react-dom"
    ],
    /* ==== JSX / TSX ==== */
    "jsx": "preserve",
    "jsxImportSource": "react",
    /* ==== incremental ==== */
    "allowJs": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "types/**/*.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
