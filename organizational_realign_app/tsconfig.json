{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    /* -------------------------------------------------- */
    /*  language                                           */
    /* -------------------------------------------------- */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    /* -------------------------------------------------- */
    /*  Performance optimizations                         */
    /* -------------------------------------------------- */
    "assumeChangesOnlyAffectDirectDependencies": true,
    /* -------------------------------------------------- */
    /*  paths / aliases                                   */
    /* -------------------------------------------------- */
    "baseUrl": ".",
    "paths": {
      "@/*":            ["./*"],
      "@/lib/*":        ["lib/*"],
      "@/types/*":      ["types/*"],
      "@/components/*": ["components/*"],
      "@/app/*":        ["app/*"],
      "@/hooks/*":      ["hooks/*"],
      "@/data/*":       ["data/*"]
    },
    /* -------------------------------------------------- */
    /*  libs / types                                      */
    /* -------------------------------------------------- */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "cypress/**/*",
    "cypress.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "**/coverage/**",
    "**/.next/**",
    "**/dist/**",
    "**/*.config.js",
    "**/*.config.ts",
    "**/build/**",
    "**/temp/**",
    "**/.cache/**",
    "**/dist/**",
    "**/.vercel/**"
  ]
}
